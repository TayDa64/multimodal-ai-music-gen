  "fx_definitions": {
    "soft_clip": {
      "type": "dynamics",
      "description": "Gentle saturation preventing digital clipping",
      "parameters": { "threshold_db": -3, "knee_db": 6 }
    },
    "analog_warmth": {
      "type": "saturation",
      "description": "Tube-style harmonic enhancement",
      "parameters": { "drive": 0.3, "mix": 0.4 }
    },
    "vinyl_crackle": {
      "type": "texture",
      "description": "Lo-fi vinyl noise layer",
      "parameters": { "intensity": 0.25, "frequency": "random" }
    },
    "sidechain_duck": {
      "type": "dynamics",
      "description": "Kick-triggered compression for pumping effect",
      "parameters": { "attack_ms": 5, "release_ms": 100, "ratio": 4 }
    },
    "reverb_plate": {
      "type": "reverb",
      "description": "Classic plate reverb",
      "parameters": { "decay_s": 1.5, "damping": 0.5, "mix": 0.25 }
    },
    "reverb_hall": {
      "type": "reverb",
      "description": "Large hall reverb",
      "parameters": { "decay_s": 3.0, "damping": 0.4, "mix": 0.2 }
    },
    "delay_eighth": {
      "type": "delay",
      "description": "Tempo-synced eighth note delay",
      "parameters": { "sync": "1/8", "feedback": 0.3, "mix": 0.2 }
    },
    "chorus": {
      "type": "modulation",
      "description": "Stereo chorus effect",
      "parameters": { "rate_hz": 1.5, "depth": 0.4, "mix": 0.3 }
    },
    "tape_saturation": {
      "type": "saturation",
      "description": "Analog tape warmth and compression",
      "parameters": { "drive": 0.4, "bias": 0.5 }
    }
  },
  
